---
import { experience } from "../data/resume";
---

<section id="experience" class="py-20 bg-[var(--ctp-mantle)]">
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    <div class="fade-in">
      <h2 class="font-mono text-sm text-[var(--ctp-green)] mb-12">&gt; cogitator.experience</h2>
    </div>

    <div class="space-y-8">
      {
        experience.map((job, index) => (
          <div
            class="fade-in relative pl-8 border-l-2 border-[var(--ctp-surface1)] hover:border-[var(--ctp-mauve)] transition-colors duration-200"
            style={`transition-delay: ${index * 100}ms`}
          >
            <div class="timeline-dot absolute left-[-9px] top-0 w-4 h-4 rounded-full bg-[var(--ctp-mauve)] border-4 border-[var(--ctp-mantle)]" />

            <div class="bg-[var(--ctp-base)] border border-[var(--ctp-surface1)] rounded-lg p-6 hover:border-[var(--ctp-mauve)] transition-colors duration-200">
              <div class="flex flex-wrap items-start justify-between gap-2 mb-4">
                <div>
                  <h4 class="text-lg font-semibold text-[var(--ctp-text)]">
                    {job.title}
                  </h4>
                  <p class="text-[var(--ctp-mauve)] font-medium">
                    {job.company}
                    <span class="text-[var(--ctp-subtext0)]"> · {job.location}</span>
                  </p>
                  <p class="text-sm text-[var(--ctp-subtext0)]">{job.department}</p>
                </div>
                <span class="font-mono text-sm text-[var(--ctp-green)] whitespace-nowrap">
                  {job.period}
                </span>
              </div>

              <ul class="space-y-2">
                {job.highlights.map((highlight) => (
                  <li class="flex gap-3 text-sm text-[var(--ctp-subtext0)] text-justify">
                    <span class="text-[var(--ctp-teal)] flex-shrink-0 leading-relaxed">▹</span>
                    <span class="leading-relaxed">{highlight}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
