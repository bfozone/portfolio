---
import { education, additional } from "../data/resume";
---

<section id="education" class="py-20 bg-[var(--ctp-mantle)]">
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    <div class="fade-in">
      <h2 class="font-mono text-sm text-[var(--ctp-green)] mb-12">&gt; cogitator.education</h2>
    </div>

    <div class="grid gap-6 md:grid-cols-2 mb-12">
      {
        education.map((edu, index) => (
          <div
            class="fade-in bg-[var(--ctp-base)] border border-[var(--ctp-surface1)] rounded-lg p-6 hover:border-[var(--ctp-mauve)] transition-colors duration-200"
            style={`transition-delay: ${index * 100}ms`}
          >
            <div class="flex items-start justify-between gap-4 mb-3">
              <h4 class="text-lg font-semibold text-[var(--ctp-text)]">{edu.degree}</h4>
              <span class="font-mono text-sm text-[var(--ctp-green)] whitespace-nowrap">
                {edu.period}
              </span>
            </div>

            <p class="text-[var(--ctp-teal)] font-medium mb-1">{edu.field}</p>
            <p class="text-sm text-[var(--ctp-subtext0)] mb-3">
              {edu.school} · {edu.location}
            </p>

            {edu.thesis && (
              <div class="pt-3 border-t border-[var(--ctp-surface1)]">
                <p class="text-sm">
                  <span class="font-mono text-[var(--ctp-subtext0)]">Thesis:</span>{" "}
                  <span class="text-[var(--ctp-subtext0)] italic text-justify">{edu.thesis}</span>
                </p>
              </div>
            )}
          </div>
        ))
      }
    </div>

    <!-- Certifications -->
    {
      additional.certifications.length > 0 && (
        <div class="fade-in">
          <h4 class="font-mono text-sm text-[var(--ctp-green)] mb-4">
            &gt; cogitator.certifications
          </h4>
          <div class="flex flex-wrap gap-4">
            {additional.certifications.map((cert) => (
              <div class="bg-[var(--ctp-base)] border border-[var(--ctp-surface1)] rounded-lg px-4 py-3 hover:border-[var(--ctp-mauve)] transition-colors duration-200">
                <p class="font-medium text-[var(--ctp-text)]">{cert.name}</p>
                <p class="text-sm text-[var(--ctp-subtext0)]">
                  {cert.status}
                  {cert.expected && ` · Expected ${cert.expected}`}
                </p>
                {cert.url && (
                  <a
                    href={cert.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="font-mono text-sm text-[var(--ctp-green)] hover:text-[var(--ctp-mauve)] transition-colors mt-2 inline-block"
                  >
                    &gt; CQF
                  </a>
                )}
              </div>
            ))}
          </div>
        </div>
      )
    }
  </div>
</section>
