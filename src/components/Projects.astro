---
import { projects, personalProjects } from "../data/resume";
---

<section id="projects" class="py-20">
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    <div class="fade-in">
      <div class="flex items-center gap-2 mb-12 font-mono text-sm">
        <span class="text-[var(--ctp-green)]">&gt; cogitator.projects</span>
        <button
          id="tab-work"
          class="project-tab ml-4 px-2 py-1 text-[var(--ctp-mauve)] border-b-2 border-[var(--ctp-mauve)]"
          data-tab="work"
        >
          --work
        </button>
        <button
          id="tab-personal"
          class="project-tab px-2 py-1 text-[var(--ctp-subtext0)] border-b-2 border-transparent hover:text-[var(--ctp-mauve)] transition-colors"
          data-tab="personal"
        >
          --personal
        </button>
      </div>
    </div>

    <!-- Work Projects -->
    <div id="projects-work" class="projects-content">
      <div class="grid gap-6 md:grid-cols-2">
        {
          projects.map((project, index) => (
            <div
              class="fade-in group bg-[var(--ctp-mantle)] border border-[var(--ctp-surface1)] rounded-lg p-6 hover:border-[var(--ctp-mauve)] transition-colors duration-200"
              style={`transition-delay: ${index * 100}ms`}
            >
              <div class="flex items-start justify-between gap-4 mb-4">
                <div>
                  <h4 class="text-lg font-semibold text-[var(--ctp-text)] group-hover:text-[var(--ctp-mauve)] transition-colors">
                    {project.name}
                  </h4>
                  <p class="text-sm text-[var(--ctp-teal)]">{project.subtitle}</p>
                </div>
                <span class="font-mono text-xs text-[var(--ctp-subtext0)] whitespace-nowrap">
                  {project.period}
                </span>
              </div>

              <p class="text-sm text-[var(--ctp-subtext0)] mb-2">{project.company}</p>

              <div class="space-y-2 mb-4">
                {project.description.map((desc) => (
                  <p class="text-sm text-[var(--ctp-subtext0)] leading-relaxed text-justify">
                    {desc}
                  </p>
                ))}
              </div>

              <div class="bg-[var(--ctp-base)] border border-[var(--ctp-surface1)] rounded p-3 mb-4">
                <p class="text-sm">
                  <span class="font-mono text-[var(--ctp-green)]">&gt; impact:</span>{" "}
                  <span class="text-[var(--ctp-subtext0)] text-justify">{project.impact}</span>
                </p>
              </div>

              {project.techStack && (
                <div class="flex flex-wrap gap-2">
                  {project.techStack.map((tech) => (
                    <span class="px-2 py-1 text-xs font-mono bg-[var(--ctp-base)] text-[var(--ctp-teal)] rounded border border-[var(--ctp-surface1)] cursor-default">
                      {tech}
                    </span>
                  ))}
                </div>
              )}
            </div>
          ))
        }
      </div>
    </div>

    <!-- Personal Projects -->
    <div id="projects-personal" class="projects-content hidden">
      <div class="grid gap-6 md:grid-cols-2">
        {
          personalProjects.map((project, index) => (
            <div
              class="fade-in group bg-[var(--ctp-mantle)] border border-[var(--ctp-surface1)] rounded-lg p-6 hover:border-[var(--ctp-mauve)] transition-colors duration-200"
              style={`transition-delay: ${index * 100}ms`}
            >
              <div class="mb-4">
                <h4 class="text-lg font-semibold text-[var(--ctp-text)] group-hover:text-[var(--ctp-mauve)] transition-colors">
                  {project.name}
                </h4>
                <p class="text-sm text-[var(--ctp-teal)]">{project.subtitle}</p>
              </div>

              <p class="text-sm text-[var(--ctp-subtext0)] leading-relaxed text-justify mb-4">
                {project.description}
              </p>

              <div class="flex flex-wrap gap-2 mb-4">
                {project.techStack.map((tech) => (
                  <span class="px-2 py-1 text-xs font-mono bg-[var(--ctp-base)] text-[var(--ctp-teal)] rounded border border-[var(--ctp-surface1)] cursor-default">
                    {tech}
                  </span>
                ))}
              </div>

              <div class="flex gap-4 font-mono text-sm">
                {project.demo && (
                  <a
                    href={project.demo}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-[var(--ctp-green)] hover:text-[var(--ctp-mauve)] transition-colors"
                  >
                    &gt; demo
                  </a>
                )}
                {project.github && (
                  <a
                    href={project.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-[var(--ctp-green)] hover:text-[var(--ctp-mauve)] transition-colors"
                  >
                    &gt; github
                  </a>
                )}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<script>
  const tabs = document.querySelectorAll('.project-tab');
  const contents = document.querySelectorAll('.projects-content');

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const target = tab.getAttribute('data-tab');

      // Update tab styles
      tabs.forEach(t => {
        t.classList.remove('text-[var(--ctp-mauve)]', 'border-[var(--ctp-mauve)]');
        t.classList.add('text-[var(--ctp-subtext0)]', 'border-transparent');
      });
      tab.classList.remove('text-[var(--ctp-subtext0)]', 'border-transparent');
      tab.classList.add('text-[var(--ctp-mauve)]', 'border-[var(--ctp-mauve)]');

      // Show/hide content
      contents.forEach(content => {
        content.classList.add('hidden');
      });
      document.getElementById(`projects-${target}`)?.classList.remove('hidden');
    });
  });
</script>
